<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Viaje" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryDark">@color/light_purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Custom theme for splash screen. -->
    <style name="Theme.NoActionbar" parent="Theme.Viaje">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.FullScreen" parent="Theme.NoActionbar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Custom theme for Progressbar -->
    <style name="ProgressBarTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Custom theme for Exit Dialog box -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/light_purple</item>
    </style>
</resources>